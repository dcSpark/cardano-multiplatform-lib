protocol_magic = _CDDL_CODEGEN_EXTERN_TYPE_ ; uint .size 4 ; @newtype
hd_address_payload = _CDDL_CODEGEN_EXTERN_TYPE_

; Addresses

; cddl had bootstrap as (1, uint) but byron/mod.rs had no uint field.
